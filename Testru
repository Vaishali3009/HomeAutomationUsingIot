<plugin>
  <groupId>org.codehaus.mojo</groupId>
  <artifactId>build-helper-maven-plugin</artifactId>
  <executions>
    <execution>
      <id>add-source</id>
      <phase>generate-sources</phase>
      <goals><goal>add-source</goal></goals>
      <configuration>
        <sources>
          <source>${project.build.directory}/generated-sources/jaxb/account</source>
          <source>${project.build.directory}/generated-sources/jaxb/customer</source>
        </sources>
      </configuration>
    </execution>
  </executions>
</plugin>


--------

<execution>
  <id>xjc-customer</id>
  <goals><goal>xjc</goal></goals>
  <configuration>
    <sources>
      <source>${project.basedir}/src/main/resources/xsd/customer-retrieval/CustomerRetrievalForPaymentParameters.xsd</source>
      <source>${project.basedir}/src/main/resources/xsd/shared</source>
    </sources>
    <outputDirectory>${project.build.directory}/generated-sources/jaxb/customer</outputDirectory>
    <packageName>com.rbs.bdd.generated.customer</packageName>
    <extension>true</extension>
  </configuration>
</execution>

-----

<execution>
  <id>xjc-account</id>
  <goals><goal>xjc</goal></goals>
  <configuration>
    <sources>
      <source>${project.basedir}/src/main/resources/xsd/account-validation/ArrValidationForPaymentParameters.xsd</source>
      <source>${project.basedir}/src/main/resources/xsd/shared</source>
    </sources>
    <outputDirectory>${project.build.directory}/generated-sources/jaxb/account</outputDirectory>
    <packageName>com.rbs.bdd.generated.account</packageName>
    <extension>true</extension>
  </configuration>
</execution>

