@Bean
public XsdSchemaCollection updateCustomerRetrievalXsd() {
    try {
        System.out.println("Inside updateCustomerRetrievalXsd");

        ClassPathResource main = new ClassPathResource("xsd/customer-retrieval/CustomerRetrievalForPaymentParameters.xsd");
        ClassPathResource transfer = new ClassPathResource("xsd/customer-retrieval/CustomerRetrievalForPaymentTransferObjects.xsd");
        ClassPathResource serviceDefs = new ClassPathResource("xsd/shared/ServiceDefinitions.xsd");
        ClassPathResource primitiveTypes = new ClassPathResource("xsd/shared/PrimitiveDatatypes.xsd");

        // Print checks
        System.out.println("CustomerRetrievalForPaymentParameters: " + main.exists());
        System.out.println("TransferObjects: " + transfer.exists());
        System.out.println("ServiceDefinitions: " + serviceDefs.exists());
        System.out.println("PrimitiveDatatypes: " + primitiveTypes.exists());

        CommonsXsdSchemaCollection xsd = new CommonsXsdSchemaCollection(
            new ClassPathResource[] { main, transfer, serviceDefs, primitiveTypes }
        );
        xsd.setInline(true);
        return xsd;
    } catch (Exception e) {
        throw new XsdSchemaLoadingException("Failed to load XSD schema for SOAP validation", e);
    }
}
